import random 
import string 

def generate_password(size):
    small_letters = string.ascii_lowercase
    cap_letters = string.ascii_uppercase
    digits = string.digits
    char = string.punctuation
    pool = small_letters + cap_letters + digits
    big_pool = pool + char

    special = input("Do you want your password to have symbols, yes or no?").lower()

    if special == "yes":
        return "".join(random.choice(big_pool) for _ in range(size))
    else:
        return "".join(random.choice(pool) for _ in range(size))
        
while True:
    size = int(input("How long should your password be?: "))
    print(generate_password(size))
    break




